{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@scenes/*": ["scenes/*"],
      "@components/*": ["components/*"],
      "@admin/*": ["admin/*"],
      "@old_pages/*": ["old_pages/*"],
      "@data/*": ["data/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/old_pages/pppoints/BattleroomPage.jsx"
  ],
  "exclude": ["node_modules"]
}
